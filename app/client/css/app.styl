html, body
	overflow hidden

#main
	position relative
	margin auto

#stage
	display block
	margin auto
	background #eee

#stage-info
	position absolute
	width 100%
	top 0
	font-size 30pt
	color #ff2458

#controller-info
	position absolute
	width 100%
	bottom 0
	font-size 16pt
	background #aaa

#controller
	display block
	position relative
	background #ccc
	margin auto

#display
	position relative

	&.large
		font-size 16pt

	&.small
		font-size 10pt
