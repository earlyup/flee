html, body
	overflow hidden
	font-size 18px
	background #2D2D4B
	&.large
		font-size 26px

#main
	position relative
	margin auto
	background url('/app/img/bg_cloud.png') repeat

#stage
	display block
	margin auto
	border-bottom 0.2em solid #6E87A2

	&.blur
		-webkit-filter blur(3px)
		-ms-filter blur(3px)
		filter blur(3px)

#stage-info
	position absolute
	width 100%
	top 0
	font-size 5em
	color #343C47
	text-shadow 0.1em 0.1em 0.2em #6C6375
	background: rgba(255,255,255,0.5)
	padding-top 2em
	.result
		display none
	.time
		color #FF00AD
	.tap
		color #fff

#controller-info
	position absolute
	width 100%
	bottom 0
	font-size 2em
	padding-top 2em
	cursor default
	color #fff
	text-shadow 0.05em 0.05em 0.1em #507C67

#controller
	display block
	position relative
	margin auto
	border-radius 1em
	background rgba(87, 162, 132, 0.82)

#display
	position relative
	padding-left 0.3em
	display inline-block
	font-size 1.5em
	color #E25E1F
	background rgba(255, 255, 255, 0.55);
	border-radius 0.3em
