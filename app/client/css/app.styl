html, body
	overflow hidden
	font-size 18px

	&.large
		font-size 26px

#main
	position relative
	margin auto

#stage
	display block
	margin auto
	background url('/app/img/bg.png') repeat

	&.blur
		-webkit-filter blur(3px)
		-ms-filter blur(3px)
		filter blur(3px)

#stage-info
	position absolute
	width 100%
	top 0
	font-size 5em
	color #343C47
	text-shadow 0.1em 0.1em 0.2em #6C6375
	background: rgba(255,255,255,0.5)
	padding-top 2em
	.result
		display none
	.time
		color #FF00AD
	.tap
		color #fff

#controller-info
	position absolute
	width 100%
	bottom 0
	font-size 2em
	padding-top 2em
	cursor default
	color #fff
	text-shadow 0.05em 0.05em 0.1em #bfafcf

#controller
	display block
	position relative
	background #D1DCF0
	margin auto

#display
	position relative
	padding-left 0.3em
	display inline-block
	font-size 1.7em
	color #AF6542
